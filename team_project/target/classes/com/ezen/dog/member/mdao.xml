<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ezen.dog.member.Mservice">

<insert id="membersave">
insert into member values(#{param1},0,#{param2},#{param3},#{param4},#{param5},#{param6},#{param7},#{param8},sysdate,sysdate)
</insert>
<insert id="babysave">
insert into mybaby values(#{param1},#{param2},#{param3},#{param4},#{param5},#{param6},#{param7})
</insert>

<select id="memberout" resultType="com.ezen.dog.member.MemberDTO">
select userId,password,userName,age,gender,email,phone,address,enroll_date,last_update from member
</select>

<select id="membermodifyForm" resultType="com.ezen.dog.member.MemberDTO">
select userId,password,userName,age,gender,email,phone,address,enroll_date from member where userId=#{param1}
</select>

<update id="membermodifyView" parameterType="com.ezen.dog.member.MemberDTO">
update member set password=#{param2},userName=#{param3},age=#{param4},
gender=#{param5},email=#{param6},phone=#{param7},address=#{param8},last_update=sysdate where userId=#{param1}
</update>

<update id="memberdelete" parameterType="com.ezen.dog.member.MemberDTO">
delete from member where userId=#{param1}
</update>

<select id="membersearchViewId" resultType="com.ezen.dog.member.MemberDTO">
select userId,password,userName,age,gender,email,phone,address,enroll_date from member where userId like '%' || #{param1} || '%'
</select>

<select id="membersearchViewName" resultType="com.ezen.dog.member.MemberDTO">
select userId,password,userName,age,gender,email,phone,address,enroll_date from member where userName like '%' || #{param1} || '%'
</select>

<select id="membersearchViewEmail" resultType="com.ezen.dog.member.MemberDTO">
select userId,password,userName,age,gender,email,phone,address,enroll_date from member where email like '%' || #{param1} || '%'
</select>

<!-- 장바구니 출력용 -->
<select id="memberInfoForCart" resultType="com.ezen.dog.member.MemberDTO">
select userId,userName,email,phone,address from member where userId=#{param1}
</select>

<select id="idcheck" resultType="int">
select count(*) from member where userId=#{param1}
</select>

<select id="memberinfo" resultType="com.ezen.dog.member.MemberDTO">
select userId,password,userName,age,gender,email,phone,address,enroll_date from member where userId=#{param1}
</select>

<delete id="memberdeleteSelf">
delete from member where userId=#{param1}
</delete>

<insert id="kakaomember">
insert into member (userId,password,userName,email) values (dbms_random.string('A',5),TRUNC(DBMS_RANDOM.value(1, 10000)),#{param1},#{param2})
</insert>

<update id="updateMembershipByPurchaseAmount" parameterType="map">
    UPDATE member
    SET membership_id = 
    CASE 
        WHEN purchase_amount >= 700000 THEN 'CEO댕댕'
        WHEN purchase_amount >= 500000 THEN '부장댕댕'
        WHEN purchase_amount >= 300000 THEN '과장댕댕'
        WHEN purchase_amount >= 200000 THEN '대리댕댕'
        WHEN purchase_amount >= 100000 THEN '신입댕댕'
        ELSE '신입댕댕'
    END
</update>
</mapper>